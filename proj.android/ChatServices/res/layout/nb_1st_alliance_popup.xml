<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nb1stAllianceLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"

    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"  >

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.05" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.9"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/npc"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/alliance" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.01" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.05" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.10" >
        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.80"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.20" >
            </View>

            <LinearLayout
                android:id="@+id/bg"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.50"
                android:orientation="horizontal" >

                <!--<ImageView-->
                    <!--android:id="@+id/bg1"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="fill_parent"-->
                    <!--android:layout_weight="0.5"-->
                    <!--android:scaleType="fitXY"-->
                    <!--android:src="@drawable/alliance_01" />-->

                <!--<ImageView-->
                    <!--android:id="@+id/bg2"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="fill_parent"-->
                    <!--android:layout_weight="0.5"-->
                    <!--android:rotationY="180"-->
                    <!--android:scaleType="fitXY"-->
                    <!--android:src="@drawable/alliance_01" />-->
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:paddingTop="20dp"
                android:layout_weight="0.225" >

                <Button
                    android:id="@+id/joinAllianceBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_equip_grey"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="加入联盟"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#AA7529"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textSize="@dimen/cs__textButtonTitle" />

            </FrameLayout>

        </LinearLayout>



        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.10" >
        </View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.18" >
        </View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="0.18"
            android:layout_height="0dp">

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.32" >
            </View>

            <TextView
                android:id="@+id/joinAllianceTipText"
                android:layout_width="0dp"
                android:layout_weight="0.53"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical"
                android:layout_gravity="center"
                android:text="Join the alliance and get the Gold Award now!"
                android:textColor="#CFE1E8"
                android:textSize="@dimen/cs__textSizeMedium" />

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.15" >
            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="0.23"
            android:layout_height="0dp">

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.32" >
            </View>

            <TextView
                android:id="@+id/joinAllianceRewardText"
                android:layout_width="0dp"
                android:layout_weight="0.53"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical"
                android:layout_gravity="center"
                android:text="200 Gems"
                android:textColor="#CFE1E8"
                android:textSize="@dimen/cs__textSizeMedium" />

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.15" >
            </View>

        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.25"
        android:layout_height="0dp">

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.32" >
        </View>

        <TextView
            android:id="@+id/sendMethodText"
            android:layout_width="0dp"
            android:layout_weight="0.53"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:layout_gravity="center"
            android:text="Send by mail"
            android:textColor="#CFE1E8"
            android:textSize="@dimen/cs__textSizeMedium" />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.15" >
        </View>

    </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.64" >
        </View>

    </LinearLayout>




</RelativeLayout>
